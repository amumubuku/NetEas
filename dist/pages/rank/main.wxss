@import "../../common/vendor.wxss";

.rank-item {
  display: flex;
  position: relative;
  background-color: #fff;
  font-size: 22rpx;
}
.item-left {
  margin: 12rpx 8rpx 0 8rpx;
}
.item-right {
  border-bottom: 2rpx solid #ccc;
  flex: 1;
  padding-bottom: 40rpx;
  margin: auto 0;
  line-height: 36rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #666;
}
.rank-item ._img {
  width: 156rpx;
  height: 156rpx;
  border-radius: 12rpx;
  margin: 0 4rpx;
}
._h3 {
  font-size: 24rpx;
  font-weight: 600;
  color: #222;
}
.song-index {
  color: #ccc;
  margin: 0 8rpx;
}