@import "../../common/vendor.wxss";

.item-replied {
  background-color: #fff;
  display: flex;
  margin: 8rpx 0;
  color: rgb(165, 158, 158);
}
.nick-name {
  color: rgb(36, 36, 143);
}
.comment-content {
  padding: 30rpx 0;
  margin-left: 76rpx;
  line-height: 34rpx;
  border-bottom: 2rpx solid red;
}
.link-count ._p {
  position: relative;
  left: 26rpx;
  top: 2rpx;
}
.link-count {
  display: flex;
}
.user-detail {
  flex: 1;
}
.comment-item {
  display: flex;
  flex-direction: column;
  background-color: #ccc;
  padding: 30rpx 8rpx 30rpx 26rpx;
}
.user-image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}
.user-image ._img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.comment-hander {
  display: flex;
}
.comment-song {
  display: flex;
  width: 100%;
  height: 160rpx;
  font-size: 24rpx;
  align-items: center;
}
.song-left {
  width: 112rpx;
  height: 112rpx;
  margin: 0 24rpx;
}
.song-left ._img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.song-right {
  flex: 1;
}
.song-name {
  color: #888;
}
.comment {
  background-color: #fff;
  font-size: 24rpx;
  position: fixed;
  width: 100%;
  height: 100%;
}
.hot-comment {
  background-color: #999;
  font-size: 22rpx;
  padding: 10rpx 0;
}
.time {
  font-size: 22rpx;
  line-height: 28rpx;
}
.flaticon-thumb-up::before {
  top: 0;
  left: 0;
  font-size: 24rpx;
  color: #444;
}